@model ProductsPanelVm;
@{
    ViewData["Title"] = "Товары";
}
<style>
	*{
		Font-family: Roboto,sans-serif;
	}
	.header1 {
		display: flex;
		align-items: center;
		justify-content: space-between;
		background-color: #333;
		color: white;
		padding: 10px 20px;
	}
	.header1 a {
			color: white;
			text-decoration: none;
			margin-left: 20px;
	}

	.filter-block {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width:100%;
		margin:0 auto;
	}

	table {
		border-collapse: collapse;
		margin: 0 auto;
		width:100%;
	}

	tr:nth-child(even) {
		background-color: #f2f2f2;
	}

	tr:hover {
		background-color: #ddd;
	}

	th {
		background-color: #333;
		color: white;
		padding: 10px;
		text-align: center;
	}

	td {
		border: 1px solid #ddd;
		padding: 10px;
		text-align: center;
	}

	td a {
		color: #F40F31;
		text-decoration: none;
		position: relative;
	}

		td a:hover {
			color:black;
		}

		td a::after {
			content: '';
			display: block;
			position: absolute;
			bottom: -2px;
			left: 0;
			width: 0;
			height: 2px;
			background-color: black;
			transition: width 0.3s ease-in-out;
		}

		td a:hover::after {
			width: 100%;
		}

.form {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin:20px;
}

input {
  padding: 10px;
  margin:5px;
  border: none;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  
}

select {
  padding: 10px;
  margin: 5px;
  border: none;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

button {
  padding: 10px;
  margin:5px;
  background-color: #1abc9c;
  color: #fff;
  border: none;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
}

button:hover {
  background-color: #148f77;
}
</style>
<header class="header1">
	<h1>Управление товарами</h1>
	<nav>
		<a asp-action="Index" asp-controller="AdminPanel">Главная</a>
		<a asp-action="Products" asp-controller="AdminPanel">Продукты</a>
		<a asp-action="Orders" asp-controller="AdminPanel">Заказы</a>
		<a asp-action="Users" asp-controller="AdminPanel">Пользователи</a>
	</nav>
</header>

<div class="filter-block">
	<form class="form" method="post" asp-controller="AdminPanel" asp-action="GetProductsBy">
		<select name="findOption">
			<option value="code">Артикул</option>
			<option value="name">Название</option>
		</select>
		<input type="text" name="findValue" placeholder="Введите значение">
		
		<button>Искать</button>
		@if (ViewBag.FindError != null)
		{
			<br />
			<span style="color: red;">@ViewBag.FindError</span>
		}
	</form>
	<form class="form" method="post" asp-action="SortProductsBy" asp-controller="AdminPanel">
		<select name="sortOption">
			<option value="code">По артикулу</option>
			<option value="name">По названию</option>
			<option value="price">По цене</option>
		</select>
		<select name="sortOrder">
			<option value="asc">По возрастанию</option>
			<option value="desc">По убыванию</option>
		</select>
		<button>Сортировать</button>
	</form>
	<form class="form" method="post" asp-action="FilterProductsByCategory" asp-controller="AdminPanel">
		<select name="categoryId">
			<option value="">Все категории</option>
			@foreach (var category in Model.Categories)
			{
				<option value="@category.Id">@category.Name</option>
			}
		</select>
		<button>Фильтровать</button>
	</form>
	<form class="form">
		<button asp-controller="AdminPanel" asp-action="Products">Сбросить</button>
	</form>
	<form class="form">
		<button asp-action="ProductForm" asp-controller="AdminPanel">Добавить</button>
	</form>
</div>
@if(Model.Products.Count>0)
{
	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Категория</th>
				<th>Название</th>
				<th>Артикул</th>			
				<th>Описание</th>
				<th>Состав</th>
				<th>Срок годности</th>
				<th>Цена (р./кг.)</th>
				<th>Вес (кг.)</th>
				<th>Действия</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Products!)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Category.Name</td>
					<td>@item.Name</td>
					<td>@item.Code</td>
					<td>@item.Description</td>
					<td>@item.Composition</td>
					<td>@item.ShelfLife</td>
					<td>@item.Price</td>
					<td>@item.Weight</td>
					<td>
						<a asp-route-productId="@item.Id" asp-action="ChangeProduct" asp-controller="AdminPanel">Изменить</a>
						<a asp-route-productId="@item.Id" asp-action="DeleteProduct" asp-controller="AdminPanel">Удалить</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else{
	<div class="message">
		<p class="big-p">Товары отсутсвуют</p>
	</div>
}